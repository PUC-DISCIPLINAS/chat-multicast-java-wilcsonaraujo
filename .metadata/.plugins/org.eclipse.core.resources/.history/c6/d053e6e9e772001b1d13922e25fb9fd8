package chat;

import java.io.IOException;
import java.io.PrintWriter;
import java.net.ServerSocket;
import java.net.Socket;
import java.util.Date;

public class DateServer {
	private static final int PORT = 9090;
	
	public static void main (String[] args) throws IOException {
		ServerSocket ouvido = new ServerSocket(PORT);
		
		System.out.println("[SERVER] Esperando pela conexão do cliente...");
		Socket cliente = ouvido.accept();
		System.out.println("[SERVER] Cliente conectado.");
		PrintWriter out = new PrintWriter(cliente.getOutputStream());
		out.println((new Date()).toString());
		
		System.out.println("[SERVER] Enviando dado. Fechando.");
		cliente.close();
		ouvido.close();
	}
}
